# Safari Automation Configuration

# Database
DATABASE_PATH=./data/safari-automation.db

# Session encryption key (generate with: openssl rand -hex 32)
SESSION_ENCRYPTION_KEY=

# Logging
LOG_LEVEL=info

# Rate limiting (actions per hour)
RATE_LIMIT_LIKE=30
RATE_LIMIT_COMMENT=10
RATE_LIMIT_DM=5

# Quiet hours (UTC)
QUIET_HOURS_START=02:00
QUIET_HOURS_END=08:00

# Platform-specific test URLs (for selector contract tests)
INSTAGRAM_TEST_POST_URL=
TIKTOK_TEST_VIDEO_URL=
THREADS_TEST_POST_URL=
TWITTER_TEST_TWEET_URL=

# Session file paths
INSTAGRAM_SESSION_FILE=./sessions/instagram.session.json
TIKTOK_SESSION_FILE=./sessions/tiktok.session.json
THREADS_SESSION_FILE=./sessions/threads.session.json
TWITTER_SESSION_FILE=./sessions/twitter.session.json

# Notifications (optional)
SLACK_WEBHOOK_URL=

# Browser settings
BROWSER_TIMEOUT=30000
SCREENSHOT_ON_FAILURE=true
