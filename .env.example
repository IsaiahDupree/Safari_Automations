# ===========================================
# Local EverReach CRM - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ----- CRM DATABASE (SUPABASE) -----
CRM_SUPABASE_URL=https://your-crm-project.supabase.co
CRM_SUPABASE_KEY=your-crm-anon-key

# Legacy aliases (also supported)
SUPABASE_URL=https://your-crm-project.supabase.co
SUPABASE_ANON_KEY=your-crm-anon-key

# ----- MEDIAPOSTER DATABASE (LOCAL SUPABASE) -----
# MediaPoster uses local Supabase instance
# Run: cd /Users/isaiahdupree/Documents/Software/MediaPoster && supabase status
# to get the anon key
MEDIAPOSTER_SUPABASE_URL=http://127.0.0.1:54321
MEDIAPOSTER_SUPABASE_KEY=<run supabase status to get anon key>

# Direct database connection (if needed)
# MEDIAPOSTER_DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# Supabase Studio for MediaPoster: http://127.0.0.1:54323

# ----- SERVER PORTS -----
# Safari Automation API (runs on Mac with Safari)
SAFARI_API_URL=http://localhost:3100

# CRM Server (central coordination)
CRM_SERVER_PORT=3200

# ----- RATE LIMITS -----
# Instagram DM rate limiting to avoid detection
CRM_RATE_MESSAGES_PER_HOUR=10
CRM_RATE_MESSAGES_PER_DAY=30
CRM_RATE_MIN_DELAY_MS=60000
CRM_RATE_MAX_DELAY_MS=300000

# ----- ACTIVE HOURS -----
# Only send messages during these hours (24h format)
CRM_ACTIVE_HOURS_START=9
CRM_ACTIVE_HOURS_END=21

# ----- SCORING WEIGHTS -----
# Adjust how relationship scores are calculated
CRM_SCORE_WEIGHT_RECENCY=0.20
CRM_SCORE_WEIGHT_RESONANCE=0.20
CRM_SCORE_WEIGHT_NEED_CLARITY=0.15
CRM_SCORE_WEIGHT_VALUE=0.20
CRM_SCORE_WEIGHT_RELIABILITY=0.15
CRM_SCORE_WEIGHT_CONSENT=0.10

# ----- DM SERVER -----
# Port for Instagram DM API server
PORT=3100
VERBOSE=false

# ----- OPENAI (Optional - for AI Copilot) -----
# OPENAI_API_KEY=sk-your-key
